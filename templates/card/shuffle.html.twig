{% extends "base.html.twig" %}

{% block title %}Card{% endblock %}

{% block content %}

    <h1>Shuffled Deck</h1>
    <div class="card-content">

        {% for card in shuffle %}
            <img src="/img/cards/{{ card.imgPath }}" alt="{{ card.imgPath }}">
        {% endfor %}

    </div>

{% endblock %}