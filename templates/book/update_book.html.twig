{% extends "base.html.twig" %}

{% block title %}Update book{% endblock %}

{% block content %}
    <h1>Update book</h1>

    <div class="add_book_form">
        <form action="{{ path('update_book') }}" method="POST">
            <label for="b_id">Book ID</label>
            <input type="text" id="b_id" name="b_id" value="{{ book.id }}" required>

            <label for="b_name">Book Name</label>
            <input type="text" id="b_name" name="b_name" value="{{ book.title }}" required>

            <label for="b_isbn">ISBN</label>
            <input type="number" id="b_isbn" name="b_isbn" value="{{ book.isbn }}" required>

            <label for="b_author">Author</label>
            <input type="text" id="b_author" name="b_author" value="{{ book.author }}" required>

            <label for="b_description">Description</label>
            <input type="text" id="b_description" name="b_description" value="{{ book.description }}" required>

            <label for="b_image">Image Name</label>
            <input type="text" id="b_image" name="b_image" value="{{ book.image }}" >

            <input type="submit" value="Submit">
        </form>
    </div>
{% endblock %}